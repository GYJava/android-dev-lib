<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="ozner.xzy.test.AirPurifierAcivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <TextView
        android:id="@+id/Device_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ozner Cup"
        android:textColor="@android:color/secondary_text_dark"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:22:33:44:55:66"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:id="@+id/Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本号:11"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备状态:离线"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/powerStatus"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电源:True"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/RPMStatus"
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速:50"
            android:textAppearance="@android:style/TextAppearance.Small" />
        <TextView
            android:layout_columnWeight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_columnWeight="1"
            android:id="@+id/pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM2.5:11"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:layout_columnWeight="1"

            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度:100"
            android:textAppearance="@android:style/TextAppearance.Small" />


        <TextView
            android:layout_columnWeight="1"
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湿度:41%"
            android:textAppearance="@android:style/TextAppearance.Small" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2DP"
        android:text="A2DP Support"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2DPMAC"
        android:text="A2DP MAC:"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2DPEnable"
        android:text="A2DP Enable:"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="left"
            android:text="电机工作时间:-"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/maxWorkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="left"
            android:text="最大工作时间:-"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/lastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="left"
            android:text="上次更换时间:-"
            android:textAppearance="@android:style/TextAppearance.Small"  />

        <TextView
            android:id="@+id/maxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="left"
            android:text="到期时间:-"
            android:textAppearance="@android:style/TextAppearance.Small"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/power"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="电源" />

        <Button
            android:id="@+id/speak"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="喇叭" />


        <Button
            android:id="@+id/resetFilter"
            android:background="@drawable/button"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="重置滤芯" />

        <Button
            android:id="@+id/remove"
            android:background="@drawable/button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"

            android:text="解除绑定" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风扇转速" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <SeekBar
                android:id="@+id/fanSpeed"
                android:layout_gravity="center"
                android:max="100"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/fanValue"
                android:text="100"
                />
        </LinearLayout>


        <Button
            android:id="@+id/fanSet"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置风速" />

    </LinearLayout>

    <TextView
        android:id="@+id/sendStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送状态:" />


</LinearLayout>
